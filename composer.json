{
	"name": "simple-crud/simple-crud",
	"type": "library",
	"description": "Create/Read/Update/Delete easily",
	"keywords": ["crud", "mysql", "sqlite"],
	"homepage": "https://github.com/oscarotero/simple-crud",
	"license": "MIT",
	"authors": [
		{
			"name": "Oscar Otero",
			"email": "oom@oscarotero.com",
			"homepage": "http://oscarotero.com",
			"role": "Developer"
		}
	],
	"support": {
		"email": "oom@oscarotero.com",
		"issues": "https://github.com/oscarotero/simple-crud/issues"
	},
	"require": {
		"php": ">=7.1",
		"latitude/latitude": "^3.1",
		"hoa/ruler": "2.17.05.16",
		"atlas/pdo": "^1.1",
		"atlas/query": "^1.2"
	},
	"autoload": {
		"psr-4": {
			"SimpleCrud\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"SimpleCrud\\Tests\\": "tests"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "^6.0",
		"friendsofphp/php-cs-fixer": "^2.11"
	},
    "scripts": {
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix ."
    }
}
